    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="assets/js/main.js"></script>
    <script>
        // Global data storage
        let portfolioData = {};

        // Load and initialize data
        async function loadData() {
            try {
                // Load portfolio data (single source of truth)
                const portfolioResponse = await fetch('data/portfolio.json');
                if (!portfolioResponse.ok) {
                    throw new Error(`HTTP error! status: ${portfolioResponse.status}`);
                }
                portfolioData = await portfolioResponse.json();
                
                console.log('Portfolio data loaded:', portfolioData);
                
                // Initialize the website with data
                initializeWebsite();
            } catch (error) {
                console.error('Error loading portfolio data:', error);
                // Initialize with empty data as fallback
                portfolioData = {
                    personalInfo: { 
                        name: 'C√©sar Iv√°n Olvera Espinosa', 
                        title: 'Doctoral Researcher @ Aalto University',
                        bio: 'Designing carbon-aware AI inference systems that shift workloads to minimize CO‚ÇÇe while meeting SLOs.',
                        email: 'cesar.olveraespinosa@aalto.fi',
                        cv: 'assets/pdf/Cesar_Olvera_CV.pdf'
                    },
                    links: {
                        github: 'https://github.com/cesarIOE97',
                        linkedin: 'https://www.linkedin.com/in/cesar-olvera/',
                        google_scholar: 'https://scholar.google.com/citations?user=example',
                        orcid: 'https://orcid.org/0009-0007-1136-3308'
                    },
                    researchInterests: ['Cloud Computing', 'Sustainable AI', 'Green Computing'],
                    research_areas: [],
                    projects: [],
                    publications: [],
                    talks: [],
                    professionalExperience: [],
                    teachingExperience: [],
                    awards: []
                };
                initializeWebsite();
            }
        }

        // Initialize website with loaded data
        function initializeWebsite() {
            populateHeroSection();
            populateAboutSection();
            populateResearchAreas();
            populateExperience();
            populateProjects();
            populatePublications();
            populateTalks();
            populateImpact();
            populateActivitiesAndMedia();
            populateContact();
            populateContactDetails();
            initializeChart();
            
            // Show content with smooth fade-in after everything is loaded
            setTimeout(() => {
                document.body.classList.remove('content-loading');
                document.body.classList.add('content-loaded');
            }, 100);
        }

        // Populate hero section
        function populateHeroSection() {
            const heroName = document.getElementById('hero-name');
            const heroTitle = document.getElementById('hero-title');
            const heroBio = document.getElementById('hero-bio');
            const researchInterests = document.getElementById('research-interests');
            const cvLink = document.getElementById('cv-link');

            // Apply typing animation to name if data is available
            if (portfolioData.personalInfo?.name && heroName) {
                initializeTypingEffect(heroName, portfolioData.personalInfo.name);
            } else if (heroName) {
                heroName.textContent = 'C√©sar Olvera'; // Fallback
            }

            if (portfolioData.personalInfo?.title) heroTitle.textContent = portfolioData.personalInfo.title;
            if (portfolioData.personalInfo?.bio) heroBio.textContent = portfolioData.personalInfo.bio;

            // Populate research interests as tags
            const interests = portfolioData.researchInterests || [];
            researchInterests.innerHTML = interests.map(interest => 
                `<span class="px-4 py-2 bg-gradient-to-r from-primary-100 to-green-100 dark:from-primary-900/30 dark:to-green-900/30 
                         text-primary-700 dark:text-primary-300 rounded-full text-sm font-medium border border-primary-200/50 
                         dark:border-primary-700/50 hover:shadow-soft transition-all-300">${interest}</span>`
            ).join('');

            // Set CV link - fix data mapping
            const cvPath = portfolioData.personalInfo?.cv || portfolioData.links?.cv;
            if (cvPath && cvLink) {
                cvLink.href = cvPath;
            }
        }

        // Typing animation function
        function initializeTypingEffect(element, text) {
            if (!element || !text) return;
            
            const typingSpeed = 100;
            const erasingSpeed = 50;
            const delayBetween = 2000;
            
            let i = 0;
            let isErasing = false;
            
            function typeWriter() {
                if (!isErasing && i < text.length) {
                    element.textContent = text.substring(0, i + 1);
                    i++;
                    setTimeout(typeWriter, typingSpeed);
                } else if (isErasing && i > 0) {
                    element.textContent = text.substring(0, i - 1);
                    i--;
                    setTimeout(typeWriter, erasingSpeed);
                } else if (!isErasing && i === text.length) {
                    setTimeout(() => {
                        isErasing = true;
                        typeWriter();
                    }, delayBetween);
                } else if (isErasing && i === 0) {
                    isErasing = false;
                    setTimeout(typeWriter, typingSpeed);
                }
            }
            
            // Start typing effect after a short delay
            setTimeout(() => {
                element.textContent = '';
                typeWriter();
            }, 1000);
        }

        // Populate about section
        function populateAboutSection() {
            const aboutBio = document.getElementById('about-bio');
            const currentPosition = document.getElementById('current-position');
            const affiliations = document.getElementById('affiliations');
            const location = document.getElementById('location');
            const educationList = document.getElementById('education-list');
            const languagesList = document.getElementById('languages-list');

            // Bio
            const longBio = portfolioData.personalInfo?.longBio || portfolioData.personalInfo?.bio;
            if (longBio && aboutBio) {
                aboutBio.textContent = longBio;
            }

            // Current position
            if (currentPosition) {
                const position = portfolioData.professionalExperience?.[0] || {};
                currentPosition.innerHTML = `
                    <div class="font-medium">${position.position || portfolioData.personalInfo?.title}</div>
                    <div class="text-sm text-slate-500 dark:text-slate-400">${position.date || '2024-Present'}</div>
                `;
            }

            // Affiliations
            if (affiliations && portfolioData.personalInfo?.affiliations) {
                affiliations.innerHTML = portfolioData.personalInfo.affiliations.map(affiliation => 
                    `<div class="text-sm">${affiliation}</div>`
                ).join('');
            }

            // Location
            if (location && portfolioData.personalInfo?.location) {
                location.textContent = portfolioData.personalInfo.location;
            }

            // Education
            if (educationList && portfolioData.education) {
                educationList.innerHTML = portfolioData.education.map(edu => `
                    <div class="border-l-2 border-primary-200 dark:border-primary-700 pl-4">
                        <div class="font-medium text-sm">${edu.degree}</div>
                        <div class="text-primary-600 dark:text-primary-400 text-sm">${edu.institution}</div>
                        <div class="text-xs text-slate-500 dark:text-slate-400">${edu.date}</div>
                    </div>
                `).join('');
            }

            // Languages
            if (languagesList && portfolioData.languages) {
                languagesList.innerHTML = portfolioData.languages.map(lang => 
                    `<span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-full text-sm">
                        ${lang.language} <span class="text-slate-500">(${lang.level})</span>
                    </span>`
                ).join('');
            }
        }


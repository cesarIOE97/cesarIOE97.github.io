        // Filter Experience function
        function filterExperience(category) {
            const experienceCategories = document.querySelectorAll('.experience-category');
            const filterBtns = document.querySelectorAll('.filter-btn');
            
            // Update active button
            filterBtns.forEach(btn => {
                btn.classList.remove('active', 'border-primary-300', 'text-primary-700');
                btn.classList.add('border-slate-300', 'text-slate-700');
            });
            
            const activeBtn = event.target;
            activeBtn.classList.add('active', 'border-primary-300', 'text-primary-700');
            activeBtn.classList.remove('border-slate-300', 'text-slate-700');
            
            // Show/hide categories
            experienceCategories.forEach(categoryDiv => {
                if (category === 'all') {
                    categoryDiv.style.display = 'block';
                } else {
                    const categoryType = categoryDiv.getAttribute('data-category');
                    categoryDiv.style.display = categoryType === category ? 'block' : 'none';
                }
            });
        }


        // Populate impact metrics
        function populateImpact() {
            const metricsGrid = document.getElementById('metrics-grid');
            const energyEquivalents = document.getElementById('energy-equivalents');
            const researchTimeline = document.getElementById('research-timeline');

            if (metricsGrid) {
                const metrics = portfolioData.metrics?.research_impact || {};
                const metricItems = [
                    { label: 'CO‚ÇÇ Saved', value: `${metrics.emissions_saved_kg || 0}kg`, icon: 'üå±', color: 'green' },
                    { label: 'Models Tested', value: metrics.models_benchmarked || 0, icon: 'ü§ñ', color: 'primary' },
                    { label: 'Publications', value: metrics.publications || 0, icon: 'üìÑ', color: 'green' },
                    { label: 'Citations', value: metrics.citations || 0, icon: 'üìö', color: 'primary' }
                ];

                metricsGrid.innerHTML = metricItems.map(metric => `
                    <div class="metric-card rounded-xl p-6 text-center interactive-card">
                        <div class="text-3xl mb-2">${metric.icon}</div>
                        <div class="text-2xl font-bold text-${metric.color}-600 dark:text-${metric.color}-400 mb-1">${metric.value}</div>
                        <div class="text-sm text-slate-600 dark:text-slate-300">${metric.label}</div>
                    </div>
                `).join('');
            }

            if (energyEquivalents) {
                const energyData = portfolioData.metrics?.energy_savings || {};
                energyEquivalents.innerHTML = `
                    <div class="flex items-center justify-between p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                        <span class="text-sm text-slate-600 dark:text-slate-300">Energy Saved</span>

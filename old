                    <div class="flex items-center justify-between p-3 bg-primary-50 dark:bg-primary-900/20 rounded-lg">
                        <span class="text-sm text-slate-600 dark:text-slate-300">Homes Powered</span>
                        <span class="font-bold text-primary-600 dark:text-primary-400">${energyData.equivalent_homes_powered || 0}</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-amber-50 dark:bg-amber-900/20 rounded-lg">
                        <span class="text-sm text-slate-600 dark:text-slate-300">Trees Equivalent</span>
                        <span class="font-bold text-amber-600 dark:text-amber-400">${energyData.trees_equivalent || 0}</span>
                    </div>
                `;
            }

            if (researchTimeline) {
                const news = portfolioData.news || [];
                researchTimeline.innerHTML = news.map(item => `
                    <div class="flex items-start gap-4 p-4 bg-slate-50 dark:bg-slate-800/50 rounded-lg">
                        <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-green-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                            ${new Date(item.date).getMonth() + 1}/${new Date(item.date).getFullYear().toString().slice(-2)}
                        </div>
                        <div>
                            <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-1">${item.title}</h4>
                            <p class="text-slate-600 dark:text-slate-300 text-sm">${item.description}</p>
                            <span class="inline-block px-2 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded text-xs mt-2">${item.type}</span>
                        </div>
                    </div>
                `).join('');
            }
        }


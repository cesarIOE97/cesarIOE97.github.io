                                orcid: '<path fill="currentColor" d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947 0 .525-.422.947-.947.947-.525 0-.946-.422-.946-.947 0-.525.421-.947.946-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416z"/>',
                                google_scholar: '<path fill="currentColor" d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5s-5.548 1.749-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>'
                            };
                            
                            return `
                                <a href="${url}" target="_blank" class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center text-primary-600 dark:text-primary-400 hover:bg-primary-200 dark:hover:bg-primary-900/50 transition-colors" title="${platform}">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        ${icons[platform] || icons.github}
                                    </svg>
                                </a>
                            `;
                        }).join('')}
                    </div>
                </div>
            `;
        }

        // Activities and Media Population
        function populateActivitiesAndMedia() {
            const activitiesList = document.getElementById('activities-list');
            const mediaList = document.getElementById('media-list');

            if (activitiesList && portfolioData.activities) {
                activitiesList.innerHTML = portfolioData.activities.map(activity => `
                    <div class="glass rounded-xl p-4 interactive-card">
                        <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-1">${activity.title}</h4>
                        <p class="text-primary-600 dark:text-primary-400 text-sm font-medium">${activity.organization}</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">${activity.date} ‚Ä¢ ${activity.location}</p>
                        <p class="text-slate-600 dark:text-slate-300 text-sm">${activity.description}</p>
                    </div>
                `).join('');
            }

            if (mediaList && portfolioData.media) {
                mediaList.innerHTML = portfolioData.media.map(media => `
                    <div class="glass rounded-xl p-4 interactive-card">
                        <h4 class="font-bold text-slate-800 dark:text-slate-100 mb-1">${media.title}</h4>
                        <p class="text-green-600 dark:text-green-400 text-sm font-medium">${media.outlet}</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">${media.date}</p>
                        <p class="text-slate-600 dark:text-slate-300 text-sm mb-3">${media.description}</p>
                        ${media.link ? `
                            <a href="${media.link}" target="_blank" class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium text-sm">
                                Read Article
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        ` : ''}
                    </div>
                `).join('');
            }
        }

        // Theme toggle functionality
        function initializeTheme() {
            const themeToggle = document.getElementById('theme-toggle');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const savedTheme = localStorage.getItem('theme');
            
            // Set initial theme
            const theme = savedTheme || (prefersDark ? 'dark' : 'light');
            document.documentElement.classList.toggle('dark', theme === 'dark');
            updateThemeIcon(theme);
            
            // Add click handler
            if (themeToggle) {
                themeToggle.addEventListener('click', () => {
                    const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    
                    document.documentElement.classList.toggle('dark', newTheme === 'dark');
                    localStorage.setItem('theme', newTheme);
                    updateThemeIcon(newTheme);
                });
            }
        }

        function updateThemeIcon(theme) {
            const themeIcon = document.getElementById('theme-icon');
            if (themeIcon) {
                themeIcon.innerHTML = theme === 'dark' 
                    ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>'
                    : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>';
            }
        }

        // Search and Filter functionality
        function initializeSearchAndFilter() {
            // Project search
            const projectSearch = document.getElementById('project-search');
            if (projectSearch) {
                projectSearch.addEventListener('input', (e) => {
                    const query = e.target.value.toLowerCase();
                    const projects = document.querySelectorAll('.project-card');
                    projects.forEach(project => {
                        const text = project.textContent.toLowerCase();
                        project.style.display = text.includes(query) ? 'block' : 'none';
                    });
                });
            }

            // Publication search
            const publicationSearch = document.getElementById('publication-search');
            if (publicationSearch) {
                publicationSearch.addEventListener('input', (e) => {
                    const query = e.target.value.toLowerCase();
                    const publications = document.querySelectorAll('.publication-card');
                    publications.forEach(publication => {
                        const text = publication.textContent.toLowerCase();
                        publication.style.display = text.includes(query) ? 'block' : 'none';
                    });
                });
            }
        }

        // Filter Projects
        function filterProjects(filter) {
            const projects = document.querySelectorAll('.project-card');
            const filterBtns = document.querySelectorAll('.project-filter-btn');
            
            // Update active button
            filterBtns.forEach(btn => {
                btn.classList.remove('active', 'border-primary-300', 'text-primary-700');
                btn.classList.add('border-slate-300', 'text-slate-700');
            });
            
            try {
                const activeBtn = document.querySelector(`[data-filter="${filter}"]`);
                if (activeBtn) {
                    activeBtn.classList.add('active', 'border-primary-300', 'text-primary-700');
                    activeBtn.classList.remove('border-slate-300', 'text-slate-700');
                }
            } catch (error) {
                console.warn('Error finding project filter button:', error, 'filter:', filter);
            }
            
            // Filter projects
            projects.forEach(project => {
                if (filter === 'all') {
                    project.style.display = 'block';
                } else {
                    const tags = project.getAttribute('data-tags').toLowerCase();
                    project.style.display = tags.includes(filter.toLowerCase()) ? 'block' : 'none';
                }
            });
        }

        // Filter Publications
        function filterPublications(filter) {
            const publications = document.querySelectorAll('.publication-card');
            const filterBtns = document.querySelectorAll('.publication-filter-btn');
            
            // Update active button
            filterBtns.forEach(btn => {
                btn.classList.remove('active', 'border-primary-300', 'text-primary-700');
                btn.classList.add('border-slate-300', 'text-slate-700');
            });
            
            try {
                // Map filter names to match data-filter attributes
                const filterMap = {
                    'journal': 'Journal Article',
                    'conference': 'Conference Paper', 
                    'workshop': 'Workshop Paper',
                    'all': 'all'
                };
                const dataFilterValue = filterMap[filter] || filter;
                
                const activeBtn = document.querySelector(`[data-filter="${dataFilterValue}"]`);
                if (activeBtn) {
                    activeBtn.classList.add('active', 'border-primary-300', 'text-primary-700');
                    activeBtn.classList.remove('border-slate-300', 'text-slate-700');
                }
            } catch (error) {
                console.warn('Error finding publication filter button:', error, 'filter:', filter);
            }
            
            // Filter publications
            publications.forEach(publication => {
                if (filter === 'all') {
                    publication.style.display = 'block';
                } else {
                    const type = publication.getAttribute('data-type');
                    const filterMap = {
                        'journal': 'Journal Article',
                        'conference': 'Conference Paper',
                        'workshop': 'Workshop Paper'
                    };
                    const targetType = filterMap[filter] || filter;
                    publication.style.display = type === targetType ? 'block' : 'none';
                }
            });
        }

        // Contact utilities
        function populateContactDetails() {
            const contactEmail = document.getElementById('contact-email');
            const cvDownload = document.getElementById('cv-download');
            const cvLink = document.getElementById('cv-link');
            const githubLink = document.getElementById('github-link');
            const linkedinLink = document.getElementById('linkedin-link');
            const scholarLink = document.getElementById('scholar-link');
            const orcidLink = document.getElementById('orcid-link');

            // Fix data mapping - use correct JSON structure
            const email = portfolioData.personalInfo?.email;
            const links = portfolioData.links || {};

            console.log('HTML populateContactDetails called:', { email, links });
            console.log('Elements found:', { 
                githubLink: !!githubLink, 
                linkedinLink: !!linkedinLink, 
                scholarLink: !!scholarLink, 
                orcidLink: !!orcidLink 
            });

            if (contactEmail && email) {
                contactEmail.href = `mailto:${email}`;
                contactEmail.textContent = email;
            }

            // Update CV links with proper target attributes
            const cvPath = portfolioData.personalInfo?.cv || links.cv;
            if (cvDownload && cvPath) {
                cvDownload.href = cvPath;
                cvDownload.target = '_blank';
                cvDownload.rel = 'noopener noreferrer';
                console.log('Updated cv-download:', cvPath);
            }
            
            if (cvLink && cvPath) {
                cvLink.href = cvPath;
                cvLink.target = '_blank';
                cvLink.rel = 'noopener noreferrer';
                console.log('Updated cv-link:', cvPath);
            }

            // Update social links with proper target attributes
            if (githubLink && links.github) {
                githubLink.href = links.github;
                githubLink.target = '_blank';
                githubLink.rel = 'noopener noreferrer';
                console.log('Updated github-link:', links.github);
            }
            
            if (linkedinLink && links.linkedin) {
                linkedinLink.href = links.linkedin;
                linkedinLink.target = '_blank';
                linkedinLink.rel = 'noopener noreferrer';
                console.log('Updated linkedin-link:', links.linkedin);
            }
            
            if (scholarLink && links.google_scholar) {
                scholarLink.href = links.google_scholar;
                scholarLink.target = '_blank';
                scholarLink.rel = 'noopener noreferrer';
                console.log('Updated scholar-link:', links.google_scholar);
            }
            
            if (orcidLink && links.orcid) {
                orcidLink.href = links.orcid;
                orcidLink.target = '_blank';
                orcidLink.rel = 'noopener noreferrer';
                console.log('Updated orcid-link:', links.orcid);
            }
        }

        function copyEmail() {
            const email = portfolioData.personalInfo?.email;
            if (email) {
                navigator.clipboard.writeText(email).then(() => {
                    // Show success message
                    const successMsg = document.createElement('div');
                    successMsg.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50';
                    successMsg.textContent = 'Email copied to clipboard!';
                    document.body.appendChild(successMsg);
                    
                    // Auto-remove after 3 seconds
                    setTimeout(() => {
                        successMsg.remove();
                    }, 3000);
                }).catch(err => {
                    console.error('Failed to copy email:', err);
                    // Fallback for older browsers
                    alert('Email: ' + email);
                });
            }
        }

        // Initialize chart
        function initializeChart() {
            const canvas = document.getElementById('emissions-chart');
            if (!canvas) return;

            // Check if Chart.js is available
            if (typeof Chart === 'undefined') {
                console.warn('Chart.js not loaded, skipping chart initialization');
                return;
            }

            const ctx = canvas.getContext('2d');
            const timeseriesData = portfolioData.metrics?.emissions_timeseries;
            
            // Handle both old array format and new object format
            let labels, data;
            if (timeseriesData && typeof timeseriesData === 'object' && timeseriesData.labels && timeseriesData.data) {
                // New format with labels and data properties
                labels = timeseriesData.labels;
                data = timeseriesData.data;
            } else if (Array.isArray(timeseriesData)) {
                // Old format as array
                labels = timeseriesData.map((_, i) => `Month ${i + 1}`);
                data = timeseriesData;
            } else {
                // Fallback data
                data = [0.1, 0.2, 0.15, 0.25, 0.4, 0.5, 0.6];
                labels = data.map((_, i) => `Month ${i + 1}`);
            }

            try {
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'CO‚ÇÇ Emissions Saved (kg)',
                            data: data,
                            borderColor: 'rgb(34, 197, 94)',
                            backgroundColor: 'rgba(34, 197, 94, 0.1)',
                            tension: 0.4,
                            fill: true
                        }]
                    },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(148, 163, 184, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(148, 163, 184, 0.8)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(148, 163, 184, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(148, 163, 184, 0.8)'
                            }
                        }
                    }
                }
            });
            } catch (error) {
                console.error('Error initializing chart:', error);
                // Hide the chart container if initialization fails
                const chartContainer = canvas.parentElement;
                if (chartContainer) {
                    chartContainer.style.display = 'none';
                }
            }
        }

        // Initialize animations and interactions
        function initializeAnimations() {
            // Add nav link hover effects
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.add('text-slate-600', 'dark:text-slate-300', 'hover:text-primary-600', 'dark:hover:text-primary-400', 'font-medium', 'transition-colors', 'duration-300');
            });

            // Initialize intersection observer for animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-in');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            // Observe all cards and sections
            document.querySelectorAll('.interactive-card, .research-card, .project-card, .metric-card, .publication-card').forEach(el => {
                el.classList.add('opacity-0', 'translate-y-8', 'transition-all', 'duration-700');
                observer.observe(el);
            });

            // Add animate-in class styles
            const style = document.createElement('style');
            style.textContent = `
                .animate-in {
                    opacity: 1 !important;
                    transform: translateY(0) !important;
                }
            `;
            document.head.appendChild(style);
        }

        // Theme toggle functionality
        // Mobile menu functionality
        function initializeMobileMenu() {
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuToggle?.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close mobile menu when clicking on a link
            mobileMenu?.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });
        }

        // Smooth scrolling for navigation links
        function initializeSmoothScrolling() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    
                    // Only handle internal navigation links (not external URLs)
                    if (href && href.startsWith('#') && href.length > 1) {
                        try {
                            const target = document.querySelector(href);
                            if (target) {
                                const offsetTop = target.offsetTop - 80; // Account for fixed header
                                window.scrollTo({
                                    top: offsetTop,
                                    behavior: 'smooth'
                                });
                            }
                        } catch (error) {
                            // Ignore invalid selectors (shouldn't happen with proper # links)
                            console.warn('Invalid selector for smooth scrolling:', href);
                        }
                    }
                });
            });
        }

        // Search and filter functionality
        function initializeSearchAndFilter() {
            // Project filtering  
            const projectFilter = document.getElementById('project-filter');
            if (projectFilter) {
                projectFilter.addEventListener('change', (e) => filterProjects(e.target.value));
            }

            // Publication filtering
            const publicationFilter = document.getElementById('publication-filter');
            if (publicationFilter) {
                publicationFilter.addEventListener('change', (e) => filterPublications(e.target.value));
            }

            // Search functionality
            const searchInput = document.getElementById('search-input');
            if (searchInput) {
                searchInput.addEventListener('input', performSearch);
            }
        }

        function performSearch() {
            const query = document.getElementById('search-input').value.toLowerCase();
            const searchableElements = document.querySelectorAll('.interactive-card');
            
            searchableElements.forEach(element => {
                const text = element.textContent.toLowerCase();
                element.style.display = text.includes(query) ? 'block' : 'none';
            });
        }        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            try {
                initializeTheme();
                initializeMobileMenu();
                initializeSmoothScrolling();
                initializeSearchAndFilter();
                loadData();
            } catch (error) {
                console.error('Error during initialization:', error);
                // Show a user-friendly error message
                const errorDiv = document.createElement('div');
                errorDiv.className = 'fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50';
                errorDiv.innerHTML = 'Portfolio failed to initialize properly. Some features may not work.';
                document.body.appendChild(errorDiv);
                
                // Auto-hide error after 5 seconds
                setTimeout(() => {
                    errorDiv.remove();
                }, 5000);
            }
        });
    </script>
</body>
</html>
